			"content": "export { default as FullChatApp } from \"./FullChatApp.svelte\";\nexport { default as MessageComponent } from \"./MessageComponent.svelte\";\nexport { default as LoadingMessage } from \"./LoadingMessage.svelte\";\nexport { default as ErrorMessage } from \"./ErrorMessage.svelte\";\n",
