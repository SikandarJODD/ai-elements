	"files": [
		{
			"content": "<script lang=\"ts\">\r\n  import { cn } from \"$UTILS$/utils.js\";\r\n  import type { HTMLImgAttributes } from \"svelte/elements\";\r\n\r\n  export type GeneratedImageLike = {\r\n    base64?: string;\r\n    uint8Array?: Uint8Array;\r\n    mediaType?: string;\r\n  };\r\n\r\n  type Props = GeneratedImageLike & {\r\n    alt: string;\r\n    class?: string;\r\n  } & Omit<HTMLImgAttributes, \"src\" | \"alt\" | \"class\">;\r\n\r\n  let {\r\n    base64,\r\n    uint8Array,\r\n    mediaType = \"image/png\",\r\n    class: className,\r\n    alt,\r\n    ...props\r\n  }: Props = $props();\r\n\r\n  let src = $derived.by(() => {\r\n    // Base64 takes precedence\r\n    if (base64 && mediaType) {\r\n      return `data:${mediaType};base64,${base64}`;\r\n    }\r\n\r\n    // Handle Uint8Array\r\n    if (uint8Array && mediaType) {\r\n      const blob = new Blob([uint8Array as BlobPart], { type: mediaType });\r\n      return URL.createObjectURL(blob);\r\n    }\r\n\r\n    return undefined;\r\n  });\r\n</script>\r\n\r\n{#if !src}\r\n  <div\r\n    aria-label={alt}\r\n    role=\"img\"\r\n    class={cn(\r\n      \"h-auto max-w-full animate-pulse overflow-hidden rounded-md bg-gray-100 dark:bg-neutral-800\",\r\n      className\r\n    )}\r\n  ></div>\r\n{:else}\r\n  <img\r\n    {src}\r\n    {alt}\r\n    class={cn(\"h-auto max-w-full overflow-hidden rounded-md\", className)}\r\n    {...props}\r\n  />\r\n{/if}\r\n",
			"type": "registry:component",
			"target": "prompt-kit/image/Image.svelte"
		},
		{
			"content": "export { default as Image } from './Image.svelte';\r\nexport type { GeneratedImageLike } from './Image.svelte';\r\n",
			"type": "registry:file",
			"target": "prompt-kit/image/index.ts"
		}
	]
}